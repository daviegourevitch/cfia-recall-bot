{
	"name": "cfia-recall-bot",
	"version": "1.0.0",
	"description": "A Discord bot for tracking and storing channel messages",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"dev": "tsx --env-file=.env src/index.ts",
		"start": "tsx --env-file=.env src/index.ts",
		"build": "tsc",
		"type-check": "tsc --noEmit",
		"lint": "eslint . --ext .ts,.js",
		"lint:fix": "eslint . --ext .ts,.js --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"check-all": "yarn type-check && yarn lint && yarn format:check && yarn test"
	},
	"keywords": [
		"discord",
		"bot",
		"message-tracking",
		"sqlite",
		"typescript"
	],
	"author": "David Gourevitch <daviegourevitch@gmail.com>",
	"license": "MIT",
	"engines": {
		"node": ">=22.6.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/eslint__js": "^9.14.0",
		"@types/jest": "^30.0.0",
		"better-sqlite3": "^12.2.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.0.5",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0"
	},
	"dependencies": {
		"discord.js": "^14.22.1"
	}
}
